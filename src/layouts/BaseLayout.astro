---
import '@fontsource-variable/outfit';
import "@styles/global.css"
interface Props {
  title: string;
}
const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="page-container">
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  .page-container {
    max-width: 44rem;
    margin: 0 auto;
    padding: 0.5rem
  }
</style>